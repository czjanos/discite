<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discite</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .card-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        .card {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
            background: rgba(0, 0, 0, 0.3);
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.3);
        }
    </style>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <% if (typeof req !== 'undefined') {%>
        <%- include('info', { req: req }); %>
    <%}%>
    <div class="container">
        <div class="card-container" id="cardContainer">
            <!-- Cards will be dynamically added here using JavaScript -->
        </div>  
    </div>

    <script>
        // Sample data for cards
        const cardData = [
            { id: 0,  title: "Identify flags", content: "Identify nationa flags as fast as you can!" },
            { id: 1, title: "Memory cards of flags", content: "This is the content of Card 2" },
            { id: 2, title: "Card 3", content: "This is the content of Card 3" },
            // Add more data as needed
        ];

        // Function to create a card element
        function createCard(id, title, content) {
            const card = document.createElement("div");
            card.classList.add("card");
            card.innerHTML = `<h3>${title}</h3><p>${content}</p>`;
            card.addEventListener("click", () => handleCardClick(id));
            return card;
        }

        // Function to populate the card container
        function populateCards() {
            const cardContainer = document.getElementById("cardContainer");

            // Create and append cards to the container
            cardData.forEach(item => {
                const card = createCard(item.id, item.title, item.content);
                cardContainer.appendChild(card);
            });
        }

        // Populate the cards when the page loads
        document.addEventListener("DOMContentLoaded", populateCards);

        function handleCardClick(id) {
            switch(id) {
                case 0:
                    window.location.href = '/flag-quiz';
                    break;
                case 1:
                    window.location.href = '/flag-memory';
                    break;
                case 2:
                    window.location.href = '/games';
                    break;
                default:
                    window.location.href = '/games';
            }
        }
    </script>
</body>
</html>